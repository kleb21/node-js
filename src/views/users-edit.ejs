<%- include("partials/_header") %>
<div class="container mt-5">
    <h2>Formulario</h2>
    <form method="POST" action="/update/<%= data.id%>">
      <div class="form-group">
        <label for="name">Nombre:</label>
        <input
          type="text"
          class="form-control"
          id="name"
          name="name"
          value="<%= data.name %>"
        />
      </div>
      <div class="form-group">
        <label for="address">Dirección:</label>
        <input
          type="text"
          class="form-control"
          id="address"
          name="address"
          value="<%= data.address %>"
        />
      </div>
      <div class="form-group">
        <label for="phone">Teléfono:</label>
        <input
          type="tel"
          class="form-control"
          id="phone"
          name="phone"
          value="<%= data.phone %>"
        />
      </div>
      <button type="submit" class="btn btn-primary mt-3">Actualizar Usuario</button>
    </form>
</div>

<%- include("partials/_footer") %>
